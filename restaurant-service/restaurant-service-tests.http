### 2. Логин с тестовыми данными из миграций
POST http://localhost:8080/api/auth/login
Content-Type: application/json

{
  "email": "admin@fooddelivery.com",
  "password": "admin123"
}

> {%
    client.log("Status: " + response.status);
    client.log("Body: " + JSON.stringify(response.body));

    if (response.status === 200) {
        if (response.body.accessToken) {
            client.global.set("access_token", response.body.accessToken);
            client.log("Got accessToken: " + response.body.accessToken.substring(0, 20) + "...");
        }
        if (response.body.userId) {
            client.global.set("admin_user_id", response.body.userId);
        }
    }
%}

### 3. Регистрация нового администратора
POST http://localhost:8080/api/auth/register
Content-Type: application/json

{
  "email": "testadmin@example.com",
  "password": "TestAdmin123",
  "fullName": "Test Administrator",
  "telephone": "+1-555-9999"
}

> {%
    client.log("Register status: " + response.status);
    client.log("Register body: " + JSON.stringify(response.body));

    if (response.status === 200 || response.status === 201) {
        client.global.set("test_admin_email", "testadmin@example.com");
        client.global.set("test_admin_password", "TestAdmin123");
        client.log("Test admin registered successfully");
    }
%}

